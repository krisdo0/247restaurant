@model RoleViewModel

@{
    ViewBag.Title = "Sửa";
}

<h2>Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Role</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tên Role" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="form-group form-button">
            <input type="submit" name="signup" id="signup" class="form-submit" value="Sửa" />
            @Html.ActionLink("Trở Về", "Index", null, new { @class = "btn btn-light ml-2" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
